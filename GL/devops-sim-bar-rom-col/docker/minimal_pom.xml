    <groupId>ch.hefr.rumley</groupId>
    <artifactId>javanco-legacy</artifactId>
    <version>FOR-DOCKER-CACHE</version>

    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
